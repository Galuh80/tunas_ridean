<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View Definition -->
    <record id="view_product_custom_tree" model="ir.ui.view">
        <field name="name">product.custom.tree</field>
        <field name="model">product.custom</field>
        <field name="arch" type="xml">
            <tree string="Custom Products">
                <field name="code"/>
                <field name="name"/>
                <field name="type"/>
                <field name="buy_price"/>
                <field name="related_supplier_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View Definition -->
    <record id="view_product_custom_form" model="ir.ui.view">
        <field name="name">product.custom.form</field>
        <field name="model">product.custom</field>
        <field name="arch" type="xml">
            <form string="Custom Product">
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="type"/>
                        <field name="buy_price"/>
                        <field name="related_supplier_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action Definition -->
    <record id="action_product_custom" model="ir.actions.act_window">
        <field name="name">Custom Products</field>
        <field name="res_model">product.custom</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new custom product.
            </p>
        </field>
    </record>

    <!-- Menu Item Definition -->
    <menuitem id="menu_product_custom_root" name="Custom Products" sequence="10" />
    <menuitem id="menu_product_custom" parent="menu_product_custom_root" action="action_product_custom" sequence="10"/>
</odoo>
